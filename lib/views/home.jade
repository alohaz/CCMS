extends ./layout.jade

block vars
  - var title = 'Home'

block content

  if user

    h2.text-center Welcome, #{user.givenName}

  else

    h2.text-center Welcome!
  hr
  div.jumbotron

    p.
      Start with..
    ol.lead
      if user
        li Register (Already Registered)
        li Login (Already logged in!)
      else
        li
          a(href="/register") Register Yourself
        li
          a(href="/login") Login
      li
        a(href="/forgot") Forgot Password
      li
        a(href="/profile") Custom Profile Data